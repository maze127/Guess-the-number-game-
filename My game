<body>
    <div class="game">
        <h1>Guess the Number (1-100)!</h1>
        <p class="message">Enter your guess below:</p>
        <input type="number" class="guess" min="1" max="100">
        <button class="btn" onclick="checkGuess()">Submit</button>
        <p id="hint"></p>
        <p id="attempts">Attempts: 0</p>
    </div>

    <script>
        let secretNumber = Math.floor(Math.random() * 100) + 1;
        let attempts = 0;

        function checkGuess() {
            const guess = parseInt(document.querySelector('.guess').value);
            attempts++;
            document.getElementById('attempts').textContent = `Attempts: ${attempts}`;

            if (guess === secretNumber) {
                document.getElementById('hint').textContent = "ðŸŽ‰ Correct! You win!";
                document.getElementById('hint').style.color = "green";
                // Optional: Add confetti effect here!
            } else if (guess < secretNumber) {
                document.getElementById('hint').textContent = "â¬†ï¸ Too low! Try again.";
                document.getElementById('hint').style.color = "red";
            } else {
                document.getElementById('hint').textContent = "â¬‡ï¸ Too high! Try again.";
                document.getElementById('hint').style.color = "red";
            }
        }
    </script>
</body>
